{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
      "quotes": [[2, "backtick", "avoid-escape"]],
      "import/extensions": ["error", "ignorePackages"],
      "linebreak-style": ["error", "windows"]
    }
}
